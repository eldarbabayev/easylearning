<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.play.eldarbabayev2.easylearning" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.play.eldarbabayev2.easylearning.EasyLearningApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.GroupListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".views.LogInSignUp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LogIn"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".views.SignUp"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".views.TermsCondition"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".views.MessengerSwipe"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
