<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_linear_out"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginTop = "5dp"
    android:layout_marginBottom = "5dp"
    android:layout_marginLeft = "@dimen/group_side_margin"
    android:layout_marginRight = "@dimen/group_side_margin"

    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_linear_l">


        <TextView
            android:id="@+id/group_name_item"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:textColor="@color/primary"
            android:textSize="23sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"


            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/text_separator"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/group_description_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/text_separator"
            android:layout_marginLeft="20dp"

            />


        <TextView
            android:id="@+id/group_teacher_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            />





    </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>